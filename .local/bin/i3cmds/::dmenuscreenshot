#!/bin/sh

# vim: filetype=dmenu
#  ____  __  __ _____ _   _ _   _      ____   ____ ____  _____ _____ _   _ ____  _   _  ___ _____ 
# |  _ \|  \/  | ____| \ | | | | |    / ___| / ___|  _ \| ____| ____| \ | / ___|| | | |/ _ \_   _|
# | | | | |\/| |  _| |  \| | | | |____\___ \| |   | |_) |  _| |  _| |  \| \___ \| |_| | | | || |  
# | |_| | |  | | |___| |\  | |_| |_____|__) | |___|  _ <| |___| |___| |\  |___) |  _  | |_| || |  
# |____/|_|  |_|_____|_| \_|\___/     |____/ \____|_| \_\_____|_____|_| \_|____/|_| |_|\___/ |_|  
#
# Скрипт удобного создания скриншотов с параметрами
# Написан: @alexandrovich.ff
# Website: http://malikov.red

case "$(printf "выбрать область\\nтекущее окно\\nвесь экран\\nвесь экран + задержка\\nвыбрать область (копировать)\\nтекущее окно (копировать)\\nвесь экран (копировать)\\nвесь экран + задержка (копировать)" | ::dmenu -x 15 -y 40 -h 28 -w 1000 -l 6 -i -p "Скриншот какой области?")" in
	"выбрать область") maim -s ~/Изображения/Скриншоты/pic-selected-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"текущее окно") maim -i "$(xdotool getactivewindow)" ~/Изображения/Скриншоты/pic-window-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"весь экран") maim ~/Изображения/Скриншоты/pic-full-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"весь экран + задержка") scrot -b -d 5 ~/Изображения/Скриншоты/pic-selected-"$(date '+%y%m%d-%H%M-%S').png" ;;
        "выбрать область (копировать)") maim -s | xclip -selection clipboard -t image/png ;;
	"текущее окно (копировать)") maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
	"весь экран (копировать)") maim | xclip -selection clipboard -t image/png ;;
    "весь экран + задержка (копировать)") scrot -b -d 5 /tmp/pic-selected-"$(date '+%y%m%d-%H%M-%S').png" | xclip -selection clipboard -t image/png ;;
esac
