#!/bin/sh

# vim: filetype=i3blocks
#  _     ___   ____    _    _     _____ 
# | |   / _ \ / ___|  / \  | |   | ____|
# | |  | | | | |     / _ \ | |   |  _|  
# | |__| |_| | |___ / ___ \| |___| |___ 
# |_____\___/ \____/_/   \_\_____|_____|
#
# Скрипт отображения раскладки
# Написан: @alexandrovich.ff
# Website: http://malikov.red

LOCALE_INFO=$(localectl)
LOCALE_NAME=$(echo "${LOCALE_INFO}" | grep "System Locale" | awk -F '=' '{print $2}' | cut -c 1-2)

if [[ "${LOCALE_NAME}" = "en" ]]; then
  echo "АНГ"
  echo "АНГ"
  echo ""
else
  echo "РУС"
  echo "РУС"
  echo ""
fi