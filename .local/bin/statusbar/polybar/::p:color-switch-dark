#!/bin/bash

# vim: filetype=rofi
#   ____ ___  _     ___  ____  ____  
#  / ___/ _ \| |   / _ \|  _ \|  _ \ 
# | |  | | | | |  | | | | |_) | | | |
# | |__| |_| | |__| |_| |  _ <| |_| |
#  \____\___/|_____\___/|_| \_\____/ 
#
# Темная цветовая тема
# Написан: @alexandrovich.ff
# Website: http://malikov.red

MENU="$(rofi -theme $HOME/.config/rofi/dark.rasi -sep "|" -dmenu -i -p 'Темная цветовая схема' -location 5 -columns 2 -xoffset -50 -yoffset -450 -width 30 -hide-scrollbar -line-padding 4 -padding 20 -lines 10 <<< " Янтарная| Синяя| Сине-серая| Коричневая| Циан| Темно-оранжевая| Темно-пурпурная| Зеленая| Серая| Индиго| Светло-синяя| Светло-зеленая| Лаймовая| Оранжевая| Розовая| Пурпурная| Красная| Сине-зеленая| Желтая")"
            case "$MENU" in
                *Янтарная) ::color-dark -amber ;;
                *Синяя) ::color-dark -blue ;;
                *Сине-серая) ::color-dark -blue-grey ;;
                *Коричневая) ::color-dark -brown ;;
                *Циан) ::color-dark -cyan ;;
                *Темно-оранжевая) ::color-dark -deep-orange ;;
                *Темно-пурпурная) ::color-dark -deep-purple ;;
                *Зеленая) ::color-dark -green ;;
                *Серая) ::color-dark -grey ;;
                *Индиго) ::color-dark -indigo ;;
                *Светло-синяя) ::color-dark -light-blue ;;
                *Светло-зеленая) ::color-dark -light-green ;;
                *Лаймовая) ::color-dark -lime ;;
                *Оранжевая) ::color-dark -orange ;;
                *Розовая) ::color-dark -pink ;;
                *Пурпурная) ::color-dark -purple ;;
                *Красная) ::color-dark -red ;;
                *Сине-зеленая) ::color-dark -teal ;;
                *Желтая) ::color-dark -yellow              
            esac
