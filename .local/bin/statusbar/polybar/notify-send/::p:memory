#!/bin/sh

# vim: filetype=polybar
#  __  __ _____ __  __  ___  ______   __
# |  \/  | ____|  \/  |/ _ \|  _ \ \ / /
# | |\/| |  _| | |\/| | | | | |_) \ V / 
# | |  | | |___| |  | | |_| |  _ < | |  
# |_|  |_|_____|_|  |_|\___/|_| \_\|_|  
#
# Вывод в уведомление топ процессов памяти
# Написан: @alexandrovich.ff
# Website: http://malikov.red

notify-send "🧠 RAM процессы" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)"