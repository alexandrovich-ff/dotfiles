sed -i -e 's/gtk-icon-theme-name="zafiro-icon-theme"/gtk-icon-theme-name="Numix-Square"/g' $GTK2DIR/.gtkrc-2.0
sed -i -e 's/gtk-cursor-theme-name=capitaine-cursors-dark/gtk-cursor-theme-name=capitaine-cursors-light/g' $GTK3DIR/settings.ini
sed -i -e 's/gtk-cursor-theme-name="capitaine-cursors-dark"/gtk-cursor-theme-name="capitaine-cursors-light"/g' $GTK2DIR/.gtkrc-2.0
sed -i -e 's/Inherits=capitaine-cursors-dark/Inherits=capitaine-cursors-light/g' $CURSORDIR/index.theme
sed -i -e 's/"theme": "One Dark.sublime-theme"/"theme": "Default.sublime-theme"/g' $SUBLDIR/Preferences.sublime-settings
sed -i -e 's/set background=dark/set background=light/g' $HOME/.config/nvim/init.vim
# Перезапуск Polybar
$LAUNCH &

elif  [[ $1 = "-yellow" ]]; then
# Цветовая схема
sed -i -e 's/bg = .*/bg = #f5f5f5/g' $PDIR/colors
sed -i -e 's/fg = .*/fg = #FFFFFF/g' $PDIR/colors
sed -i -e 's/ac = .*/ac = #fdd835/g' $PDIR/colors
sed -i -e 's/bi = .*/bi = #fdd835/g' $PDIR/colors
sed -i -e 's/be = .*/be = #fdd835/g' $PDIR/colors
sed -i -e 's/mf = .*/mf = #FFFFFF/g' $PDIR/colors

sed -i -e 's/dark/light/g' $RDIR/config
sed -i -e 's/termite-dark.color/termite-light.color/g'$SCRIPTS/::terminal
sed -i -e 's/-nb '\'#2D303B\'' -nf white -sb blue -sf white/-nb white -nf black -sb red -sf white/g' $SCRIPTS/::dmenu
sed -i -e 's/-nb '\'#2D303B\'' -nf white -sb blue -sf white/-nb white -nf black -sb red -sf white/g' $SCRIPTS/::passmenu
sed -i -e 's/termite-dark.color/termite-light.color/g' $POLYUPD/lupdates
sed -i -e 's/termite-light.color/termite-dark.color/g' $POLYUPD/network
sed -i -e 's/termite-light.color/termite-dark.color/g' $HOME/.profile
sed -i -e 's/gtk-theme-name=Arc-Dark/gtk-theme-name=Numix/g' $GTK3DIR/settings.ini
sed -i -e 's/gtk-theme-name="Arc-Dark"/gtk-theme-name="Numix"/g' $GTK2DIR/.gtkrc-2.0
sed -i -e 's/gtk-icon-theme-name=zafiro-icon-theme/gtk-icon-theme-name=Numix-Square/g' $GTK3DIR/settings.ini
sed -i -e 's/gtk-icon-theme-name="zafiro-icon-theme"/gtk-icon-theme-name="Numix-Square"/g' $GTK2DIR/.gtkrc-2.0
sed -i -e 's/gtk-cursor-theme-name=capitaine-cursors-dark/gtk-cursor-theme-name=capitaine-cursors-light/g' $GTK3DIR/settings.ini
sed -i -e 's/gtk-cursor-theme-name="capitaine-cursors-dark"/gtk-cursor-theme-name="capitaine-cursors-light"/g' $GTK2DIR/.gtkrc-2.0
sed -i -e 's/Inherits=capitaine-cursors-dark/Inherits=capitaine-cursors-light/g' $CURSORDIR/index.theme
sed -i -e 's/"theme": "One Dark.sublime-theme"/"theme": "Default.sublime-theme"/g' $SUBLDIR/Preferences.sublime-settings
sed -i -e 's/set background=dark/set background=light/g' $HOME/.config/nvim/init.vim
# Перезапуск Polybar
$LAUNCH &

else
echo "Available options:
-amber		-blue			-blue-grey		-brown
-cyan		-deep-orange	-deep-purple	-green
-grey		-indigo			-light-blue		-light-green
-lime		-orange			-pink			-purple
-red		-teal			-yellow"
fi
