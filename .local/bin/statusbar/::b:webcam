  if [[ "$(fuser /dev/video0)" != "" ]]; then
    echo "ЗАПИСЬ"
    echo "ЗАПИСЬ"
    echo ""
  else
    echo "ВКЛ"
    echo "ВКЛ"
    echo ""
  elseif
    echo "ВЫКЛ"
    echo "ВЫКЛ"
    echo ""
  fi
fi