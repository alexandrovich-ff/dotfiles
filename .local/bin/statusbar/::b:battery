capacity=$(cat /sys/class/power_supply/BAT0/capacity) || exit
status=$(cat /sys/class/power_supply/BAT0/status)

if [ "$capacity" -ge 75 ]; then
    color="#E88939"
elif [ "$capacity" -ge 50 ]; then
    color="#E88939"
elif [ "$capacity" -ge 25 ]; then
    color="#E88939"
else
    color="#ff0000"
    warn="â—"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#E88939"

printf "<span color='%s'>%s%s%s</span>" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/ğŸ”‹/;s/Not Charging/ğŸ›‘/;s/Charging/ï‡¦/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"