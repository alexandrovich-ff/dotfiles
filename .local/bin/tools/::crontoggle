#!/bin/sh

# vim: filetype=cron
#   ____ ____   ___  _   _   _____ ___   ____  ____ _     _____ 
#  / ___|  _ \ / _ \| \ | | |_   _/ _ \ / ___|/ ___| |   | ____|
# | |   | |_) | | | |  \| |   | || | | | |  _| |  _| |   |  _|  
# | |___|  _ <| |_| | |\  |   | || |_| | |_| | |_| | |___| |___ 
#  \____|_| \_\\___/|_| \_|   |_| \___/ \____|\____|_____|_____|
#
# –°–∫—Ä–∏–ø—Ç –≤–∫–ª—é—á–µ–Ω–∏—è\–æ—Ç–∫–ª—é—á–µ–Ω–∏—è Cron –∑–∞–¥–∞—á
# –ù–∞–ø–∏—Å–∞–Ω: @alexandrovich.ff
# –í–µ–±-—Å–∞–π—Ç: http://malikov.red

([ -f ~/.config/cronsaved ] && crontab - < ~/.config/cronsaved  && rm ~/.config/cronsaved && notify-send "üïì –ó–∞–¥–∞—á–∏ cron –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã.") || ( crontab -l > ~/.config/cronsaved && crontab -r && notify-send "üïì –ó–∞–¥–∞—á–∏ cron —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –∏ –æ—Ç–∫–ª—é—á–µ–Ω—ã.")
