#!/bin/sh

# vim: filetype=dmenu
#  ____  __  __ _____ _   _ _   _       ____   _    ____ ____  
# |  _ \|  \/  | ____| \ | | | | |     |  _ \ / \  / ___/ ___| 
# | | | | |\/| |  _| |  \| | | | |_____| |_) / _ \ \___ \___ \ 
# | |_| | |  | | |___| |\  | |_| |_____|  __/ ___ \ ___) |__) |
# |____/|_|  |_|_____|_| \_|\___/      |_| /_/   \_\____/____/ 
#
# Скрипт ввода пароля с помощью dmenu
# Написан: @alexandrovich.ff
# Веб-сайт: http://malikov.red

dmenu -nb white -nf black -sb red -sf white -fn 'TerminessTTF Nerd Font-14' -x 15 -y 40 -h 28 -w 540 -p "$1" <&- && echo