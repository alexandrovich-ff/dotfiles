#!/bin/sh

# vim: filetype=xrandr
#  ____ ___ ____  ____  _        _ __   __
# |  _ \_ _/ ___||  _ \| |      / \\ \ / /
# | | | | |\___ \| |_) | |     / _ \\ V / 
# | |_| | | ___) |  __/| |___ / ___ \| |  
# |____/___|____/|_|   |_____/_/   \_\_|
#                                         
# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞–ª–∏—á–∏—è –º–æ–Ω–∏—Ç–æ—Ä–∞ –ø–µ—Ä–µ–¥ –∑–∞–ø—É—Å–∫–æ–º –≥—Ä–∞—Ñ. –æ–±–æ–ª–æ—á–∫–∏
# –ù–∞–ø–∏—Å–∞–Ω: @alexandrovich.ff
# –í–µ–±-—Å–∞–π—Ç: http://malikov.red

export DISPLAY=:0.0

xrandr_command="/usr/bin/xrandr"
awk_command="/bin/awk"

resolution_VGA=`${xrandr_command} | $awk_command '/VGA1 connected/ { getline; print  $1}'`
resolution_HDMI=`${xrandr_command} | $awk_command '/HDMI1 connected/ { getline; print  $1}'`

polybar=$HOME/.config/polybar/launch

if [ -n "$resolution_VGA" ]; then
    notify-send "üß∞ –û–±–Ω–∞—Ä—É–∂–µ–Ω VGA –º–æ–Ω–∏—Ç–æ—Ä" && ::dmenudisplay 
elif [ -n "$resolution_HDMI" ]; then
    notify-send "üß∞ –û–±–Ω–∞—Ä—É–∂–µ–Ω HDMI –º–æ–Ω–∏—Ç–æ—Ä" && ::dmenudisplay
fi