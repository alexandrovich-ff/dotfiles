if pgrep -x transmission-da >/dev/null ;
then
	[ "$(printf "–ù–µ—Ç\\n–î–∞" | dmenu -nb '#2D303B' -nf white -sb blue -sf white -x 15 -y 40 -h 28 -w 545 -fn 'Terminus (TTF)-14' -i -p "–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Ç–æ—Ä—Ä–µ–Ω—Ç —Å–ª—É–∂–±—É?")" = "–î–∞" ] && killall transmission-da && notify-send "üí° –°–ª—É–∂–±–∞ [Transmission]: –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞"
else
	~/.config/i3/scripts/ifinstalled transmission-cli || exit
	[ "$(printf "–ù–µ—Ç\\n–î–∞" | dmenu -nb '#2D303B' -nf white -sb blue -sf white -x 15 -y 40 -h 28 -w 545 -fn 'Terminus (TTF)-14' -i -p "–ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–æ—Ä—Ä–µ–Ω—Ç —Å–ª—É–∂–±—É?")" = "–î–∞" ] && transmission-daemon && notify-send "üí° –°–ª—É–∂–±–∞ [Transmission]: –∑–∞–ø—É—â–µ–Ω–∞."
fi
